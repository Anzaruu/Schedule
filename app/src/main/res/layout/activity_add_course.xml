<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCourseActivity"
    android:background="@color/anti_flash"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Добавить предмет"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/green_700"/>

    <EditText
        android:id="@+id/setName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Название"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/setDepartment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Кафедра"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setName" />


    <Button
        android:id="@+id/createBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:text="Создать"
        android:textSize="25dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setDepartment"
        android:textColor="@color/green_500"
        android:background="@drawable/btn_style" />

</androidx.constraintlayout.widget.ConstraintLayout>